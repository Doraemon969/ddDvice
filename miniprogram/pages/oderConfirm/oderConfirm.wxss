/* miniprogram/pages/oderConfirm/oderConfirm.wxss */
/* 地址 */
.address{
    overflow: hidden;
}

.address .box{
    width: 100%;
    font-size: 36rpx;
    line-height: 60rpx;
}

/* 日期选择 */
.useDateRange .box .title {
    margin-bottom: 15rpx;
}

.useDateRange .box .datePicker {
    vertical-align: middle;
    text-align: center;
}

.useDateRange .box .datePicker .data-start,
.useDateRange .box .datePicker .data-end {
    border: 1px solid #eee;
    padding: 10rpx 15rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    box-shadow: 0 0 5rpx 3rpx #eee;
}

.useDateRange .box .datePicker .data-end .icon,
.useDateRange .box .datePicker .data-start .icon {
    
}

.useDateRange .box .datePicker .data-end .date,
.useDateRange .box .datePicker .data-start .date {
    font-size: 35rpx;
    margin-left: 10rpx;
}


/* 设备信息 */
.deviceInfomation .box{
    display: flex;
    justify-content: space-between;
}

.deviceInfomation .box .deviceImg {
    width: 220rpx;
    height: 220rpx;
    vertical-align: bottom;
}

.deviceInfomation .box .deviceContent {
    width: 435rpx;
}

.deviceInfomation .box .deviceContent .item {
    display: flex;
    justify-content: space-between;
}

.deviceInfomation .box .deviceContent .top-des {
    height: 100rpx;
    font-size: 35rpx;
    font-weight: 300;
    line-height: 50rpx;
    margin-bottom: 10rpx;
    /* 固定行数，超出打点 */
    -webkit-line-clamp: 2;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    overflow: hidden;
}
.deviceInfomation .box .deviceContent .middle-rent {
    height: 50rpx;
    font-size: 35rpx;
    font-weight: 300;
    margin-bottom: 10rpx;
}
.deviceInfomation .box .deviceContent .bottom-num  {
    height: 50rpx;
    font-size: 35rpx;
    font-weight: 300;
}

