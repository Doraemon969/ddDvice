/* 备注 */
.noteInformation{
    margin-bottom: 220rpx !important;
}

.noteInformation .textarea{
    width: 100%;
    height: 200rpx;
    line-height: 30rpx;
}

.noteInformation .box{
    width: 100%;
    height: 100%;
}











/* 特殊样式类 */
.selected {
    width: 100%;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 101rpx;
}
.navigation {
    width: 100%;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: orange;
}

.flex-box {
    display: flex;
    justify-content: space-between;
}

.flex-box .item1 {
    width: 33.33%;
    line-height: 100rpx;
    text-align: center;
}

.flex-box .item2 {
    width: 25%;
    line-height: 100rpx;
    text-align: center;
}

/* 阴影 */
.shadow-box{
    width: 710rpx;
    margin: 10rpx auto;
    box-sizing: border-box;
    /* background-color: #f5f5f5; */
    padding: 15rpx;
    border-radius: 10rpx;
    border: 1px solid #999;
    box-shadow: 0 0 5rpx 8rpx #eee;
}