/* miniprogram/pages/shopping-car/shopping-car.wxss */
.checkbox-group .slide-item {
    border:1px solid rgba(128, 125, 125, .1);
    overflow: hidden;
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 16rpx 10rpx;
    margin: 10rpx
}

.checkbox-group .slide-item .left {
    height: 200rpx;
    position: relative;
}

.checkbox-group .slide-item .left .img {
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    left: 50rpx;
    top: 50%;
    transform: translateY(-50%);
}

.checkbox-group .slide-item .left .goodsDes {
    width: 476rpx;
    height: 200rpx;
    position: absolute;
    left: 264rpx;
    top: 50%;
    transform: translateY(-50%);
}

.checkbox-group .slide-item .left .checkbox-item {
    position: absolute;
    left: 10rpx;
    top: 50%;
    transform: translateY(-50%);
}


.checkbox-group .slide-item .left .checkbox-item .left-con .goodsDes .left-title {
    display: block;
    font-size: 35rpx;
    color: #333;
    font-weight: bold;
}

.checkbox-group .slide-item .left .checkbox-item .left-con .goodsDes .left-des {
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 27rpx;
    text-align: left;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #333;
    font-weight: 200;
    margin: 10rpx 0;
}

.checkbox-group .slide-item .left .checkbox-item .left-con .goodsDes .left-rent {
    font-size: 40rpx;
    color: #f40;
    font-weight: 200;
}

.checkbox-group .slide-item .left .checkbox-item .left-con .goodsDes .left-rent .symbol {
    font-size: 26rpx;
    display: inline-block;
    margin-right: 8rpx;
}

/* right */
.checkbox-group .slide-item .right {
    line-height: 200rpx;
    height: 200rpx;
    display: flex;
    justify-content: space-between;
}

.checkbox-group .slide-item .right .right-text {
    width: 115rpx;
    text-align: center;
}

.checkbox-group .slide-item .right .right-cllection {
    background-color: #9CA9FF;
}

.checkbox-group .slide-item .right .right-share {
    background-color: #7280FF;
}

.checkbox-group .slide-item .right .right-delete {
    background-color: #FF1460;
}

















