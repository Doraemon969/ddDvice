/* miniprogram/pages/goodsDetial/goodsDetail.wxss */
.goods-detail {

}

.goods-detail .detial-pic {
    width: 100%;
    height: 500rpx;
}

.goods-detail .detial-pic .pic {
    width: 100%;
    height: 100%;
    border-radius: 5rpx;
}


/* 商品描述部分 */
.goods-detail .description {
    width: 100%;
    height: 300rpx;
    border-radius: 10rpx;
    margin: 20rpx 0;
}

.goods-detail .description .price {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    font-weight: 300;
    color: #fff;
    padding-left: 20rpx;
    background: linear-gradient(90deg, #FF7500, #FF2200);
}

.goods-detail .description .des-content {
    margin-top: 20rpx;
    padding: 10rpx 20rpx;
    font-size: 35rpx;
    font-weight: 300;
    box-sizing: border-box;
    width: 750rpx;
    height: 250rpx;
    background-color: #f5f5f5;
    line-height: 60rpx;
    border-radius: 10rpx;
    border: 1px solid #eee;
    /* 固定行数，超出打点 */
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    text-overflow: ellipsis;
    overflow: hidden;
    margin: 10rpx 0;
}


/* 商品选择部分 */
.goods-detail .selected {
    width: 100%;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 101rpx;
}

.goods-detail .navigation {
    width: 100%;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: orange;
}







/* 特殊样式类 */
.flex-box{
    display: flex;
    justify-content: space-between;
}

.flex-box .item1{
    width: 33.33%;
    line-height: 100rpx;
    text-align: center;
}

.flex-box .item2{
    width: 25%;
    line-height: 100rpx;
    text-align: center;
}
