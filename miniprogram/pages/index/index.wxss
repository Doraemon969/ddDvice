/**index.wxss**/
.container {
  background-color: #fff;
}
.container .page-body {
  width: 100%;
}
.container .page-body .page-section .swiper-item {
  width: 100%;
  height: 100%;
}

.container .page-body .recommend {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 95%;
  box-shadow: 0 4rpx 20rpx 0 rgba(212, 217, 223, .5);
  border-radius: 10px;
  padding: 30rpx 20rpx;
}

.container .page-body .recommend-title {
  color: #0096e0;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid rgb(235, 233, 233);
}

.container .page-body .recommend .content .grid .item {
  margin: 20rpx 0;
  background-color: rgba(216, 237, 255, .2);
  border-radius: 15rpx;
}

.container .page-body .recommend .content .grid .item .img {
  width: 208rpx;
  height: 304rpx;
  border-radius: 10rpx;
}

.container .page-body .recommend .content .grid .item .des {
  width: 210rpx;
  height: 70rpx;
  line-height: 35rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 21rpx;
  text-align: left;
  text-overflow: ellipsis;
  overflow: hidden;
  margin: 10rpx 0;
}

.container .page-body .recommend .content .grid .item .rent {
  color: #f40;
  font-weight: 300;
  font-size: 30rpx;
  margin-bottom: 15rpx;
  text-align: left;
  width: 100%;
  margin-left: 15rpx;
}










/* 提交按钮 */
.viewOrderViewerBox {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
}

.viewOrderViewerBox .contentBox {
  color: #fff;
  font-size: 40rpx;
  font-weight: 300;
  width: 400rpx;
  height: 500rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  padding-top: 40rpx;
  position: relative;
}

.viewOrderViewerBox .contentBox .cancel {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: -25rpx;
  top: -15rpx;
}

.viewOrderViewerBox .contentBox .viewOrderContent {
  display: inline-block;
  width: 100%;
  height: 160rpx;
}

.viewOrderViewerBox .contentBox .viewOrderContent .label {
  display: block;
}

.viewOrderViewerBox .contentBox .viewOrderContent .input {
  display: block;
  width: 350rpx;
  margin: 30rpx auto;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
}

.viewOrderViewerBox .contentBox .viewOrderFooter {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  background-color: rgb(68, 68, 235);
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}