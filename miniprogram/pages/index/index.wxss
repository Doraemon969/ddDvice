/**index.wxss**/
.container {
  background-color: #fff;
}
.container .page-body {
  width: 100%;
}
.container .page-body .page-section .swiper-item {
  width: 100%;
  height: 100%;
}
.container .page-body .recommend {
  padding: 20rpx;
  margin-top: 30rpx;
  color: #333;
}
.container .page-body .recommend-content {
  box-sizing: border-box;
}
.container .page-body .recommend-content .floor {
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
}
.container .page-body .recommend-content .floor .item {
  width: 235rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
  overflow: hidden;
}
.container .page-body .recommend-content .floor .item .img {
  width: 100%;
  height: 350rpx;
  vertical-align: bottom;
}
.container .page-body .recommend-content .floor .item .text {
  padding: 10rpx 7rpx;
  font-size: 24rpx;
}
.container .page-body .recommend-content .floor .item .rent {
  font-size: 24rpx;
  color: #f40;
  padding: 10rpx 7rpx;
}
